                "body": {
                    "mode": "raw",
                    "raw": "{\n    \"name\": \"Bilgisayar\",\n    \"code\": \"BIL\",\n    \"description\": \"Bilgisayar ve çevre birimleri\",\n    \"parentId\": null\n}"
                },
                "url": {
                    "raw": "{{base_url}}/api/categories",
                    "host": ["{{base_url}}"],
                    "path": ["api", "categories"]
                },
                "description": "Create a new category"
            }
